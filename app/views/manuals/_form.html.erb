    </div>


   <div class="form-group row">
      <%= form.label :description, Manual.human_attribute_name("category") , class: " col-form-label"%>
      <%= form.collection_select(:category_id, @categories, :id, :name, {},{class: "form-control selectpicker"} ) %>
   </div>
  </div>
  
  

  <%= form.submit t('action.save'), class: "btn btn-primary" %>
  <%= link_to t('action.back'), users_path, class: "btn btn-secondary" %>


<% end %>
