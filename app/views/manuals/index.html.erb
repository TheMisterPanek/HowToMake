<h1 class="text-in-middle"><%= Manual.model_name.human(count: 2) %></h1>

<div class="container">
  <div class="row">
    <div class="col-2">
      <%= link_to t('action.manual.clear'), manuals_path, class: "btn btn-secondary"%>
    </div>
    <div class="col-2">
    </div>
    <div class="col-6"></div>
    <div class="col-2">
      <%= link_to t('action.manual.new'), new_manual_path, class: "btn btn-primary" if user_signed_in?%>
    </div>
  </div>
</div>

<hr/>
<div class="row">
  <%= empty_manuals? @manuals %>
  <% @manuals.each do |manual| %>
    <%= render manual %>
  <% end %>
</div>

