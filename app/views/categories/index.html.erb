<h3><%= Category.model_name.human(count: 2) %></h3>

  <div class="row">
    <ul class="list-group">
    <div class="row">
      <% @categories.each do |category| %>
        <div onClick="window.location.href = '<%= edit_category_path(category.id) %>';">
           <li class="list-group-item">
            <div class="col-3"><%=  category.name %></div>
            <div class="col-2">
              <div class="badge badge-default badge-pill"><%= category.manuals_count %></div>
            </div>  
            <div class="col-4">
                 <%= link_to t('action.destroy'), category, class: 'btn btn-sm btn-danger', method: :delete,                                                              data: { confirm: 'Are you sure?' } %>
            </div>
          
          </li>
      </div>
    <% end %>
    </div>
  </ul>
</div>

<hr/>

<%= link_to t('action.category.new'), new_category_path, class: "btn btn-primary" %>
